{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Friend: Start Jetty (Local H2 Database)",
            "type": "shell",
            "command": "C:/ProgramData/chocolatey/lib/maven/apache-maven-3.9.11/bin/mvn.cmd",
            "args": [
                "jetty:run",
                "-Dspring.profiles.active=-local"
            ],
            "options": {
                "cwd": "${workspaceFolder}/DC-API-2018/dc-api/dc-api-friend"
            },
            "problemMatcher": {
                "pattern": {
                    "regexp": "^(.*)$",
                    "file": 1
                },
                "background": {
                    "activeOnStart": true,
                    "beginsPattern": "^.*Scanning for projects.*$",
                    "endsPattern": "^.*Started Jetty Server.*$"
                }
            },
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "dedicated",
                "showReuseMessage": true,
                "clear": false
            },
            "isBackground": true
        },
