{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "PNG: Build Project",
      "type": "shell",
      "command": "powershell.exe -ExecutionPolicy Bypass -NoProfile -File \"${workspaceFolder}\\.devtools\\build.ps1\"",
      "options": {
        "cwd": "${workspaceFolder}/png"
      },
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared",
        "showReuseMessage": false
      },
      "problemMatcher": {
        "owner": "java",
        "fileLocation": ["relative", "${workspaceFolder}/png/src"],
        "pattern": {
          "regexp": "^(.*):(\\d+):\\s+(warning|error):\\s+(.*)$",
          "file": 1,
          "line": 2,
          "severity": 3,
          "message": 4
        }
      }
    },
    {
      "label": "PNG: Show URL",
      "type": "shell",
      "command": "echo PNG Application started at http://localhost:8080/",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared"
      }
    },
    {
      "label": "PNG: Deploy to Tomcat",
      "type": "shell",
      "command": "${workspaceFolder}\\.devtools\\deploy_to_tomcat.bat",
      "options": {
        "cwd": "${workspaceFolder}/png"
      },
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": true,
        "panel": "shared"
      },
      "problemMatcher": []
    },
    {
      "label": "PNG: 查看控制台日志",
      "type": "shell",
      "command": "Get-Content C:\\apache-tomcat-8.5.100\\logs\\tomcat-console.log -Tail 100",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": true,
        "panel": "shared"
      },
      "problemMatcher": []
    },
    {
      "label": "PNG: 查看数据库配置",
      "type": "shell",
      "command": "type C:\\apache-tomcat-8.5.100\\logs\\tomcat-console.log | findstr /i \"PNG DATABASE URL User\"",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": true,
        "panel": "shared"
      },
      "problemMatcher": []
    }
  ]
}
